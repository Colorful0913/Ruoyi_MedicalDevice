    <sql id="selectInventoryBatchVo">
        select b.batch_id, b.device_id, b.batch_num, b.supplier, b.inbound_time, b.expiry_date, b.inbound_quantity, b.current_quantity, b.status, b.remark, b.create_by, b.create_time, b.update_by, b.update_time, d.device_name
        from tb_inventory_batch b
                 left join tb_device_info d on b.device_id = d.device_id
    </sql>

